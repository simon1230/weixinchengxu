

view{height: 100%;}


ul{list-style: none;height: 100%;width: 100%;overflow: hidden;}

li{width: 100%; height: 100%;overflow: hidden; display: block; 
   margin-bottom: 6px; border-bottom: 1px solid #d3d3d3;
   padding:8px 2px;}
li image{float: left; height: 30px;width: 10%;}
li div{float: right; width: 86%; overflow: hidden;}

div strong{font-size: 14px; display: block; margin-bottom: 8px; color:#606060;}
div p{font-size: 12px;display: block;line-height: 22px;color:#AEAEAE;
       margin-bottom: 8px;}
div i{float:left;font-size: 12px;color:#AAAAAA; 
	  background: url(../../images/bat.png) no-repeat; padding-left: 20px;
	 }
div span{float: right; font-size: 12px; color:#AAAAAA;
	   margin-right: 8px;background: url(../../images/address.png) no-repeat;
	   padding-left: 12px;}